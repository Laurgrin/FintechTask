{
  "name": "laurynas/commission-task-skeleton",
  "description": "Skeleton for Paysera recruitment task",
  "keywords": [],
  "type": "project",
  "autoload": {
    "psr-4": {
      "Source\\": "Source/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "Tests"
    }
  },
  "require": {
    "php": ">=7.0",
    "ext-bcmath": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "3.0.x-dev",
    "phpmd/phpmd": "2.8.1",
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "3.5.3"
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "scripts": {
    "phpunit": "phpunit",
    "fix-cs": "php-cs-fixer fix",
    "test-cs": "php-cs-fixer fix --dry-run -v",
    "test": [
      "@phpunit",
      "@test-cs"
    ]
  }
}
